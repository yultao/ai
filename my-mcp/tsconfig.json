{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "build",       // 输出目录改成 build
    "rootDir": ".",          // 保持根目录结构
    "declaration": true      // 生成类型声明文件（可选）
  },
  "include": ["**/*.ts"]
}